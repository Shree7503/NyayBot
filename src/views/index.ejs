                    <script>
                        document.addEventListener("DOMContentLoaded", function () {
                            // Text overlay animation
                            const elements = document.querySelectorAll('.text-overlay h1, .text-overlay p');

                            elements.forEach((element) => {
                                const text = element.innerText;
                                element.innerHTML = ''; // Clear the element's content

                                // Loop through each character in the text
                                text.split('').forEach((char, index) => {
                                    const span = document.createElement('span');
                                    span.textContent = char;

                                    // Apply a delay to each letter based on its position
                                    span.style.animation = `typing 0.3s steps(1) forwards ${index * 0.06}s`;

                                    // Check if the character is a space
                                    if (char === ' ') {
                                        span.style.width = '0.24em'; // Add space width
                                    }

                                    element.appendChild(span);
                                });
                            });


                            // Review slider functionality
                            const reviews = document.querySelectorAll('.review-slide');
                            let currentReview = 0;

                            function showReview(index) {
                                reviews.forEach((review, i) => {
                                    review.style.display = i === index ? 'inline-block' : 'none';
                                });
                            }

                            document.querySelector('.left-slide-button').addEventListener('click', () => {
                                currentReview = (currentReview === 0) ? reviews.length - 1 : currentReview - 1;
                                showReview(currentReview);
                            });

                            document.querySelector('.right-slide-button').addEventListener('click', () => {
                                currentReview = (currentReview === reviews.length - 1) ? 0 : currentReview + 1;
                                showReview(currentReview);
                            });

                            showReview(currentReview);
                        });
                        document.querySelector('.chatbot-icon').addEventListener('click', function () {
                            document.getElementById('chatbotAction').classList.toggle('hidden');
                        });




